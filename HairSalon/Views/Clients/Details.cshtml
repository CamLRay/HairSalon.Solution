@{ Layout = "_Layout"; }


@model HairSalon.Models.Client

<p>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</p>
<p>Stylist: @Html.ActionLink(@$"{Model.Stylist.Name}", "Details", "Stylists", new { id = @Model.StylistId} )</p>
<p>@Html.DisplayNameFor(model => model.InitialApp): @Html.DisplayFor(model => model.InitialApp)</p>
<p>@Html.DisplayNameFor(model => model.NextApp): @Html.DisplayFor(model => model.NextApp)</p>

@using (Html.BeginForm("Edit", "Clients", new { id = Model.ClientId}, FormMethod.Get))
{
  <input type="submit" value="Edit" class="btn-primary">
}