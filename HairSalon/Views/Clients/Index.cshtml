@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<h1>Client List</h1>
@if (@Model.Count == 0)
{
  <h2>You have no clients. Time to add some!</h2>
}

<ul>
@foreach(Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId})</li>

}
</ul>
<p>@Html.ActionLink("Add Clients", "Create")</p>